{
  "compilerOptions": {
      "allowJs": false,
      "declaration": true,
      "module": "commonjs",
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "target": "es2015",
      "noImplicitAny": true,
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "sourceMap": true,
      "outDir": ".build",
      "baseUrl": ".",
      "paths": {
          "*": ["node_modules/*", "src/@types/*"]
      },
      "lib": ["es2015", "es2017", "dom"],
      "downlevelIteration": true
  },
  "include": ["src", "tests"]
}
